class Solution {
public:
    double myPow(double x, int n) {
       
      double ans=1.0;
        long long k=n;
        if(k<0){
            k=-1*k;
        }
        while(k){            
            if(k%2==0){
                x=x*x;
                k/=2;
            }else{
                ans*=x;
                k-=1;
            }
        }
   
    if(n<0){
        ans= double(1.0)/ans;
    }
        
        return ans;
    }
};
